<script>
  // Mark this page to be excluded from View Transitions
  if (typeof document !== 'undefined') {
    document.documentElement.setAttribute('data-astro-transition-persist', 'false');
    
    // Alternative method: Add specific meta to exclude from client routing
    const meta = document.createElement('meta');
    meta.name = 'astro-skip-transitions';
    meta.content = 'true';
    document.head.appendChild(meta);
  }
</script>

<style>
/* Contact Page Styles - Same as before */
.contact-container {
     min-height: 100vh;
     display: flex;
     flex-direction: column;
     align-items: center;
     justify-content: space-between;
     padding: 1rem;
     position: relative;
     z-index: 1;
}

/* Footer wrapper for proper positioning */
.footer-wrapper {
     position: relative;
     z-index: 10;
     width: 100%;
}

.contact-card {
     background: transparent;
     backdrop-filter: blur(2px);
     border: 1px solid rgba(63, 63, 70, 0.5);
     border-radius: 0px;
     padding: 2rem;
     max-width: 900px;
     width: 100%;
     box-shadow: 
          0 10px 40px rgba(0, 0, 0, 0.3),
          0 0 0 1px rgba(255, 255, 255, 0.05);
     position: relative;
     overflow: hidden;
     clip-path: polygon(0 0, 100% 0, 100% calc(100% - 40px), calc(100% - 40px) 100%, 0 100%);
}

.contact-card::after {
     content: '';
     position: absolute;
     bottom: -1px;
     right: 40px;
     width: 2px;
     height: 57px;
     background: rgb(255, 255, 255);
     transform: rotate(45deg);
     transform-origin: bottom;
     z-index: 10;
}

/* Right border gradient */
.right-border {
     position: absolute;
     top: 0;
     right: -1px;
     width: 2px;
     height: calc(100% - 20px);
     background: linear-gradient(10deg, rgba(255, 255, 255) 30%, transparent, transparent, transparent);
     z-index: 2;
}

/* Bottom border gradient */
.bottom-border {
     position: absolute;
     bottom: -1px;
     right: -320px;
     width: calc(100% - 20px);
     height: 2px;
     background: linear-gradient(10deg,transparent, transparent, transparent, rgba(255, 255, 255) 30%);
     z-index: 2;
}

.contact-card::before {
     content: '';
     position: absolute;
     top: 0;
     left: 0;
     right: 0;
     height: 1px;
     background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
     box-shadow: 0 -10px 30px rgba(255, 255, 255, 0.826), 0 -5px 15px rgba(255, 255, 255, 0.958);
}

/* Header Section */
.contact-header {
     text-align: center;
     margin-bottom: 2rem;
}

.contact-title {
     font-size: 2rem;
     font-weight: 700;
     background: linear-gradient(135deg, #ffffff, #a1a1aa);
     background-clip: text;
     -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
     margin-bottom: 0.75rem;
     font-family: 'Space Mono', monospace;
}

.contact-subtitle {
     font-size: 1rem;
     color: #a1a1aa;
     line-height: 1.5;
     max-width: 500px;
     margin: 0 auto;
}

.highlight-text {
     color: #e4e4e7;
     font-weight: 500;
}

/* Contact Methods Grid */
.contact-methods {
     display: grid;
     grid-template-columns: 1fr 1fr;
     gap: 1.25rem;
     margin-bottom: 2rem;
}

.contact-method-card {
     background: rgba(39, 39, 42, 0.6);
     border: 1px solid rgba(63, 63, 70, 0.3);
     border-radius: 0px;
     padding: 1.25rem;
     text-align: center;
     transition: all 0.3s ease;
     position: relative;
     overflow: hidden;
     clip-path: polygon(0 0, 100% 0, 100% calc(100% - 16px), calc(100% - 16px) 100%, 0 100%);
}

/* Hover border effects for contact method cards */
.contact-method-card::before {
     content: '';
     position: absolute;
     bottom: -1px;
     left: 0;
     width: calc(100% - 16px);
     height: 2px;
     background: rgba(255, 255, 255, 0.3);
     transform: scaleX(0);
     transform-origin: left;
     transition: transform 0.2s ease;
     transition-delay: 0.4s;
     z-index: 2;
}

.contact-method-card::after {
     content: '';
     position: absolute;
     bottom: -1px;
     right: 15px;
     width: 2px;
     height: 23px;
     background: rgb(255, 255, 255);
     transform: rotate(45deg) scaleY(0);
     transform-origin: bottom;
     transition: transform 0.2s ease;
     transition-delay: 0.2s;
     z-index: 10;
}

.contact-method-card .method-card-right-border {
     position: absolute;
     top: 0;
     right: -1px;
     width: 2px;
     height: calc(100% - 10px);
     background: linear-gradient(10deg, rgba(255, 255, 255) 30%, transparent, transparent, transparent);
     transform: scaleY(0);
     transform-origin: bottom;
     transition: transform 0.2s ease;
     transition-delay: 0s;
     z-index: 2;
}

.contact-method-card .method-card-bottom-border {
     position: absolute;
     bottom: -1px;
     right: -230px;
     width: calc(100% - 10px);
     height: 2.5px;
     background: linear-gradient(10deg,transparent, transparent, transparent, rgba(255, 255, 255) 30%);
     transform: scaleX(0);
     transform-origin: left;
     transition: transform 0.2s ease;
     transition-delay: 0.4s;
     z-index: 2;
}

.contact-method-card:hover {
     transform: translateY(-2px);
     border-color: rgba(0, 0, 0, 0.4);
     box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

/* Trigger animations on hover */
.contact-method-card:hover::before {
     transform: scaleX(1);
     transition-delay: 0s;
}

.contact-method-card:hover::after {
     transform: rotate(45deg) scaleY(1);
     transition-delay: 0.2s;
}

.contact-method-card:hover .method-card-right-border {
     transform: scaleY(1);
     transition-delay: 0.4s;
}

.contact-method-card:hover .method-card-bottom-border {
     transform: scaleX(1);
     transition-delay: 0s;
}

.contact-method-card::before {
     content: '';
     position: absolute;
     top: 0;
     left: 0;
     right: 0;
     height: 1px;
     background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
     opacity: 0;
     transition: opacity 0.3s ease;
}

.contact-method-card:hover::before {
     opacity: 1;
}

.method-icon {
