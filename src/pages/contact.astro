     content: '';
     position: absolute;
     bottom: -1px;
     left: 0;
     width: calc(100% - 16px);
     height: 2px;
     background: rgba(255, 255, 255, 0.4);
     transform: scaleX(0);
     transform-origin: left;
     transition: transform 0.25s ease;
     z-index: 2;
}

.cta-button::after {
     content: '';
     position: absolute;
     bottom: -1px;
     right: 16px;
     width: 2px;
     height: 23px;
     background: rgb(255, 255, 255);
     transform: rotate(45deg) scaleY(0);
     transform-origin: bottom;
     transition: transform 0.25s ease 0.125s;
     z-index: 10;
}

.cta-button .cta-right-border {
     position: absolute;
     top: 0;
     right: -1px;
     width: 2px;
     height: calc(100% - 16px);
     background: rgba(255, 255, 255, 0.4);
     transform: scaleY(0);
     transform-origin: bottom;
     transition: transform 0.25s ease 0.25s;
     z-index: 2;
}

.cta-button:hover {
     transform: translateY(-2px);
     box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

/* Trigger animations on CTA button hover */
.cta-button:hover::before {
     transform: scaleX(1);
}

.cta-button:hover::after {
     transform: rotate(45deg) scaleY(1);
}

.cta-button:hover .cta-right-border {
     transform: scaleY(1);
}

.cta-button svg {
     transition: transform 0.3s ease;
}

.cta-button:hover svg {
     transform: translate(2px, -2px);
}

/* Mobile Responsive */
@media (max-width: 768px) {
     .contact-container {
          padding: 0.5rem;
          align-items: center;
          justify-content: center;
          padding-top: 0rem;
          padding-bottom: 0.5rem;
          min-height: 100vh;
          max-height: 100vh;
          overflow: hidden;
     }

     .contact-card {
          padding: 1rem;
          border-radius: 20px;
          height: auto;
          max-height: none;
          overflow: visible;
          clip-path: polygon(0 0, 100% 0, 100% calc(100% - 40px), calc(100% - 40px) 100%, 0 100%);
     }

     /* Mobile border effects - same as desktop */
     .contact-card::after {
          bottom: -1px;
          right: 40px;
          width: 2px;
          height: 57px;
          background: rgb(255, 255, 255);
          transform: rotate(45deg);
          transform-origin: bottom;
          z-index: 10;
     }

     .right-border {
          position: absolute;
          top: 100px;
          right: -1px;
          width: 2.5px;
          height: calc(100% - 20px);
          background: linear-gradient(10deg, rgba(255, 255, 255) 30%, transparent,transparent,transparent,transparent);
          z-index: 2;
     }

     .bottom-border {
          position: absolute;
          bottom: -1px;
          right: -100px;
          width: calc(100% - 20px);
          height: 2.5px;
          background: linear-gradient(10deg, transparent,transparent,transparent,transparent, rgba(255, 255, 255) 30%);
          z-index: 2;
     }

     .contact-title {
          font-size: 1.75rem;
     }

     .contact-subtitle {
          font-size: 0.9rem;
     }

     .contact-methods {
          grid-template-columns: 1fr;
          gap: 0.75rem;
          margin-bottom: 1rem;
     }

     .contact-method-card {
          padding: 0.75rem;
     }

     .method-icon {
          width: 28px;
          height: 28px;
     }

     .social-section {
          margin-bottom: 0.75rem;
     }

     .social-links {
          grid-template-columns: repeat(2, 1fr);
          gap: 0.75rem;
     }

     .social-link {
          padding: 0.625rem 0.875rem;
          font-size: 0.75rem;
     }

     .cta-button {
          padding: 0.625rem 1.25rem;
          font-size: 0.75rem;
     }
}

@media (max-width: 480px) {
     .contact-card {
          padding: 0.75rem;
          margin: 0.25rem;
     }

     .contact-title {
          font-size: 1.4rem;
     }

     .contact-subtitle {
          font-size: 0.75rem;
     }

     .contact-header {
          margin-bottom: 0.75rem;
     }

     .contact-methods {
          margin-bottom: 0.5rem;
     }

     .social-section {
          margin-bottom: 0.5rem;
     }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
     * {
          transition: none !important;
          animation: none !important;
     }
}

/* High contrast mode */
@media (prefers-contrast: high) {
     .contact-card {
          border-color: #ffffff;
          background: rgba(0, 0, 0, 0.9);
     }

     .contact-method-card,
     .social-link {
          border-color: #ffffff;
          background: rgba(255, 255, 255, 0.1);
     }
}