<script>
  const popover = document.querySelector('#book-a-call-modal') as HTMLElement | null;
  const actions = popover?.querySelector('.modal__actions') as HTMLElement | null;
  const modalGlitch = popover?.querySelector('.modal__glitch') as HTMLElement | null;
  const bookCallButton = document.querySelector('button[popovertarget="book-a-call-modal"]') as HTMLButtonElement | null;
  
  // Create and preload the audio
  const audioTheme = new Audio('/book_a_call.wav');
  audioTheme.preload = 'auto';
  audioTheme.volume = 0.7; // Adjust volume as needed
  
    const playThemeSound = async () => {
    try {
      audioTheme.currentTime = 0; // Reset to beginning
      await audioTheme.play();
    } catch (err) {
      console.error(err);
      // Try alternative path
      try {
        const altAudio = new Audio('/book_a_call.wav');
        altAudio.volume = 0.7;
        await altAudio.play();
      } catch (altErr) {
        console.error(altErr);
      }
    }
  };
  
  const handleKeyPress = (event: KeyboardEvent) => {
    const { key } = event;
    if (key === 'Escape') {
      if (popover) popover.dataset.action = 'Cancel';
    } else if (key === 'Enter' && !actions?.matches(':focus-within')) {
      if (popover) {
        popover.dataset.action = 'Proceed';
        popover.hidePopover();
      }
    }
  };

  let glitched = false;
  let glitchClock: number | undefined;

  const kickOff = () => {
    glitchClock = window.setTimeout(() => {
      if (modalGlitch) {
        modalGlitch.style.setProperty('animation-name', 'glitch');
        requestAnimationFrame(async () => {
          await Promise.allSettled(
            modalGlitch.getAnimations().map((a) => a.finished)
          );
          glitched = true;
          modalGlitch.style.removeProperty('animation-name');
          kickOff();
        });
      }
    }, !glitched ? 1500 : Math.random() * 10000 + 2000);
  };

  // Add click event listener to the Book a Call button
  if (bookCallButton) {
    bookCallButton.addEventListener('click', async (event) => {
      await playThemeSound();
    });
  }

  if (popover && actions) {
    popover.addEventListener('toggle', async (event: Event) => {
      const toggleEvent = event as ToggleEvent;
      if (toggleEvent.newState === 'open') {
        window.addEventListener('keydown', handleKeyPress);
        kickOff();
      } else {
        if (glitchClock !== undefined) clearTimeout(glitchClock);
        glitched = false;
        await Promise.allSettled(popover.getAnimations().map((a) => a.finished));
        window.removeEventListener('keydown', handleKeyPress);
        delete popover.dataset.action;
      }
    });

    actions.addEventListener('click', (event: Event) => {
      const target = event.target as HTMLElement;
      if (target.tagName === 'BUTTON') {
        const button = target as HTMLButtonElement;
        if (popover && button.dataset.action) {
          popover.dataset.action = button.dataset.action;
        }
      }
    });
  }
</script>