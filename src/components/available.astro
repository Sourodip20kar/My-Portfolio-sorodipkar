---
const { className } = Astro.props;
---

<div class={`flex items-center gap-2 ${className}`}>
    <span class="relative flex items-center justify-center size-3">
        <span class="absolute inline-flex h-full w-full animate-ping duration-1000 rounded-full bg-zinc-100 opacity-75"></span>
        <span class="relative inline-flex size-2 rounded-full bg-zinc-100"></span>
      </span>
      <p class="text-zinc-300 audiowide-regular">Open To Work</p>
</div>

<style>
.audiowide-regular {
  font-family: "Audiowide", sans-serif;
  font-weight: 400;
  font-style: normal;
}
</style>